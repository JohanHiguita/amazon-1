<h1>Posts</h1>

<%= link_to "Crear nuevo post", new_post_path %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Title</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.user.email %></td>
        <td><%= post.title %></td>
        <td>
          <%#= link_to "Texto que va a aparecer", ruta_path, method, class %>
          <%= link_to "Mostrar", post_path(post) %>
          <%= link_to "Editar", edit_post_path(post) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
